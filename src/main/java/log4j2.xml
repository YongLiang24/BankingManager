<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    
    <File name="myFile" fileName="C:\Users\yongl\Documents\output.txt">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
    </File>
    
    <RollingFile name="RollingFile" fileName="C:/Users/yongl/Documents/BankingLog/Rolling.txt"
                 filePattern="C:/Users/yongl/Documents/BankingLog/app-%d{MM-dd-yyyy}-%i.log.txt">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="100 MB"/>
      </Policies>
      
    </RollingFile>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="RollingFile"/>
<!--        <AppenderRef ref="Console"/>
       <AppenderRef ref="myFile"></AppenderRef> -->
    </Root>
  </Loggers>
</Configuration>